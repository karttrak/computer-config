alias rgrep='grep -r --color=auto -I --exclude-dir=build --exclude-dir=bin --exclude-dir=depcache --exclude-dir="*apache*" --exclude-dir=closure --exclude-dir=flume --exclude-dir="hadoop-0.*" --exclude-dir="jetty-distribution*" --exclude-dir=classes --exclude-dir=".git" --exclude="*.pyc"'
alias chrome="open -a 'Google Chrome'"
alias showFiles="defaults write com.apple.finder AppleShowAllFiles YES"
alias hideFiles="defaults write com.apple.finder AppleShowAllFiles NO"
alias nbbinst="npm install && bower install && bundle install"
alias gs="grunt serve"
alias gsd="grunt serve:dist"
alias gb="grunt build"
alias gbc="grunt build && git aa && git cm 'build'"
alias gp="grunt pulldata"
alias gpc="grunt pulldata && git add desktop.* && git commit -m 'pull data'"
alias pr="open https://github.com/pulls?user=yext-pages"
alias gpr="git pages -pr"
alias reload="source ~/.bash_profile"
alias deals="open http://www.everbuying.net/new-products.html && open http://smile.amazon.com/gp/goldbox && open http://www.slickdeals.net && open http://www.woot.com && open http://www.meh.com"
alias khan-deploy="./tools/khan/deploy"
alias vi="mvim"
alias vim="mvim -v"
